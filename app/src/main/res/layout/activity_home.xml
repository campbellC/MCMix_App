<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ac.panoramix.uoe.xyz.UI_Handling.HomeActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/start_conversation_button"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:text="@string/Start_Conversation_Button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintRight_toLeftOf="@+id/start_privacy_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginRight="6dp"
        app:layout_constraintLeft_toRightOf="@+id/start_conversation_button"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/start_privacy_button"
        android:layout_width="201dp"
        android:layout_height="74dp"
        android:text="@string/Start_Privacy_Button"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="207dp"/>

    <Button
        android:id="@+id/stop_privacy_button"
        android:layout_width="244dp"
        android:layout_height="108dp"
        android:text="@string/Stop_Privacy_Button"
        tools:layout_editor_absoluteX="278dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/start_privacy_button"/>

</android.support.constraint.ConstraintLayout>
