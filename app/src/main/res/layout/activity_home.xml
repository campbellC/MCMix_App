<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ac.panoramix.uoe.xyz.UI_Handling.HomeActivity">

    <Button
        android:id="@+id/start_conversation_button"
        android:layout_width="193dp"
        android:layout_height="62dp"
        android:text="@string/Start_Conversation_Button"
        tools:layout_editor_absoluteX="92dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/start_privacy_button"
        android:layout_width="201dp"
        android:layout_height="74dp"
        android:text="@string/Start_Privacy_Button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/start_conversation_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/stop_privacy_button"
        android:layout_width="244dp"
        android:layout_height="108dp"
        android:text="@string/Stop_Privacy_Button"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@id/start_privacy_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/start_privacy_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
